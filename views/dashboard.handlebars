<div class="blog-post">
  <button
    type="button"
    class="btn btn-success btn-lg mt-3 ml-3 add-button"
    data-id="{{userId}}"
  >Add Post</button>
  <div class="dashboard">
    {{#each blogs as |blog|}}
      <div class="container border rounded m-3 bg-secondary">
        <div class="border-bottom">
          <h2>{{post_title}}</h2>
          <h3>Posted by: {{user.name}}</h3>
        </div>
        <div class="border-bottom">
          <p class="post-content">{{contents}}</p>
        </div>
        <p>Posted at: {{date}}</p>
        {{#each comments as |comment|}}
          <div class="container border rounded m-1 bg-light">
            <p>{{comment.comment}}</p>
            <p>{{comment.date}}</p>
          </div>
        {{/each}}
        <div class="mx-auto" style="width: 200px;">
          <h3 class="text-center"><a href="/dashboard/blog/{{id}}">View Post</a></h3>
        </div>
      </div>
    {{/each}}
  </div>

  <div class="container border rounded m-3 bg-secondary post-input" id="dashboard-display">
    <h2>Create a new post</h2>
    <form id="create-post">
      <div class="form-group">
        <label for="post-title">Title</label>
        <input type="text" class="form-control" id="post-title" />
        <label for="post-body">Body</label>
        <textarea
          class="form-control"
          name="message"
          rows="10"
          cols="60"
          id="post-body"
        ></textarea>
        <button type="submit" class="btn btn-primary mt-2 create-btn" data-user_id="{{userId}}">Submit</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/dashboard.js"></script>