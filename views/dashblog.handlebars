<div class="blog-post">
  <div class="container border rounded m-3 bg-secondary">
    <div class="border-bottom">
      <h2>{{post_title}}</h2>
      <h3>Posted by: {{user.name}}</h3>
    </div>
    <div class="border-bottom">
      <p class="post-content">{{contents}}</p>
    </div>
    <p>Posted at: {{date}}</p>
    {{#each comments as |comment|}}
      <div class="container border rounded m-1 bg-light">
        <p>{{comment.comment}}</p>
        <p>{{comment.date}}</p>
      </div>
    {{/each}}
      <button
        type="button"
        class="btn btn-warning btn-lg btn-block mb-3 mt-3 update-button"
        data-id="{{id}}"
      >Update Post</button>
      <button
        type="button"
        class="btn btn-danger btn-lg btn-block mb-3 mt-3 delete-button"
        data-id="{{id}}"
      >Delete Post</button>
  </div>
</div>

<div class="container border rounded m-3 bg-secondary update-input" id="dashboard-display">
    <h2>Update this post</h2>
    <form class="update-post">
      <div class="form-group">
        <label for="post-title">Title</label>
        <input type="text" class="form-control" id="title-update" />
        <label for="post-body">Body</label>
        <textarea
          class="form-control"
          name="message"
          rows="10"
          cols="60"
          id="body-update"
        ></textarea>
        <button type="submit" class="btn btn-primary mt-2 update-btn" data-id="{{id}}">Submit</button>
      </div>
    </form>
  </div>

<script src="/js/dashblog.js"></script>