<div class="blog-post">
  {{#each blogs as |blog|}}
    <div class="container border rounded m-3 bg-secondary">
      <div class="border-bottom">
        <h2>{{post_title}}</h2>
        <h3>Posted by: {{user.name}}</h3>
      </div>
      <div class="border-bottom">
        <p class="post-content">{{contents}}</p>
      </div>
      <p>Posted at: {{date}}</p>
      {{#each comments as |comment|}}
        <div class="container border rounded m-1 bg-light">
          <p>{{comment.comment}}</p>
          <p>{{comment.date}}</p>
        </div>
      {{/each}}
      <div class="mx-auto" style="width: 200px;">
        <h3><a href="/blog/{{id}}">View Post</a></h3>
      </div>
    </div>
  {{/each}}
</div>

<script src="/js/blog.js"></script>